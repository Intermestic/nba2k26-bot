# NBA 2K26 Discord Bot - Production Environment Variables
# Copy this file to .env on your DigitalOcean droplet and fill in the values

# ============================================================================
# DISCORD CONFIGURATION
# ============================================================================
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MySQL/TiDB connection string
# Format: mysql://username:password@host:port/database?ssl={"rejectUnauthorized":true}
DATABASE_URL=your_database_url_here

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT secret for session management (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Manus OAuth configuration
VITE_APP_ID=your_manus_app_id
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://manus.im/oauth

# Owner information
OWNER_OPEN_ID=your_owner_open_id
OWNER_NAME=your_name

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application branding
VITE_APP_TITLE=NBA 2K26 Player Database
VITE_APP_LOGO=https://your-logo-url.com/logo.png

# ============================================================================
# MANUS API CONFIGURATION
# ============================================================================
# Manus built-in services (LLM, storage, etc.)
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=your_backend_api_key
VITE_FRONTEND_FORGE_API_KEY=your_frontend_api_key
VITE_FRONTEND_FORGE_API_URL=https://api.manus.im

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=production

# ============================================================================
# OPTIONAL: ANALYTICS (if using)
# ============================================================================
# VITE_ANALYTICS_ENDPOINT=your_analytics_endpoint
# VITE_ANALYTICS_WEBSITE_ID=your_website_id

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file with real values to version control
# 2. Keep this file secure - it contains sensitive credentials
# 3. After filling in values, save as .env (without .template)
# 4. Verify all values are correct before starting the bot
# 5. Test database connection before deployment
